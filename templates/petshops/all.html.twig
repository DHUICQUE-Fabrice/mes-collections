{% extends 'base.html.twig' %}
{% block title  %}
    {{ parent() }} | Les Petshops
{% endblock %}
{% block body %}
<h1 class="text-center">Les Petshops</h1>
<div id="cards_landscape_wrap-2">
    <div class="container">
        <div class="row">
            {% for item in petshops %}
                {% set thisClass = 'petshop' %}

                {% include 'inc/_cards.html.twig' %}
            {% endfor %}
        </div>
    </div>
</div>
<div class="d-flex justify-content-center">
    {% do petshops.setPageRange(3) %}
    {{ knp_pagination_render(petshops, 'inc/_pagination.html.twig') }}
</div>
{% endblock %}





