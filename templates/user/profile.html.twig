{% extends 'base.html.twig' %}
{% block title  %}
    {{ parent() }} | {{ user.nickname }}
{% endblock %}
{% block body %}
{{ user.avatar }}
    <p>{{ user.nickname }} a {{ user.petshops.count }} petshops et {{ user.horseSchleiches.count }} chevaux Schleich, les voici :</p>
<div id="cards_landscape_wrap-2">
    <div class="container">
        <div class="row">
            {% for item in items %}
                {% if item in user.petshops %}
                {% set thisClass='petshop' %}
                {% else %}
                    {% set thisClass='horse_schleich' %}
                    {% endif %}
                {% include 'inc/cards.html.twig' %}
            {% endfor %}
        </div>
    </div>
</div>
    <div class="d-flex justify-content-center">
        {% do items.setPageRange(4) %}
        {{ knp_pagination_render(items, 'inc/pagination.html.twig') }}
    </div>

{% endblock %}



