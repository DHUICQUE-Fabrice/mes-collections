{% extends 'base.html.twig' %}
{% block title %}
{{ parent() }} | Nouveau Petshop
{% endblock %}

{% block body %}
    <div class="container">

        {{ form_start(petshopForm) }}
           <small> {{ form_row(petshopForm.imageFile, {'attr': {'width': '100px'}}) }}</small>
        {{ form_widget(petshopForm) }}
        <br>
        <div class="row">
            <div class="col-8"></div>
            <div class="col-4">
                <button type="submit" name="valid" class="btn btn-primary" onclick="this.disabled=true;this.value='Enregistrement...';this.form.submit()">Valider</button>
            </div>
        </div>
        {{ form_end(petshopForm) }}

    </div>
{% endblock %}


